{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true
  },
  "paths": {
    "$/*": ["src/*"],
    "$": ["src"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
